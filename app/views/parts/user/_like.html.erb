<% if item.liked_by?(current_user) %>
  <span class="ml-2">
    <%= link_to item_likes_path(item), method: :delete, class:'btn-outline-danger btn-lg' do %>
      ♥<%= item.likes.count %>
    <% end %>
  </span>
  <% else %>
  <span class="ml-2">
    <%= link_to item_likes_path(item), method: :post, class:'btn-outline-danger btn-lg' do %>
      ♡<%= item.likes.count %>
    <% end %>
  </span>
<% end %>