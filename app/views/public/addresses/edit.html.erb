<h1 class="page_title">Edit Address</h1>


<%= form_with model: @address, url: address_path, local: true do |f| %>
  <%= render 'parts/user/error_message', model: f.object %>
  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'郵便番号（ハイフン無し）　　　　　　　　' %>
    <%= f.text_field :postal_code, class:"form-control" %>
  </div>

  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'住所　　　　　　　　　　　　　　　　　　' %>
    <%= f.text_field :address, class:"form-control", size: 65 %>
  </div>

  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'宛名　　　　　　　　　　　　　　　　　　' %>
    <%= f.text_field :name, class:"form-control" %>
    <%= f.submit "Create", class:"btn btn-success ml-5 btn-sm w-25" %>
  </div>
<% end %>