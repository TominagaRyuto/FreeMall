<div class="page_title">
  <h1>Create Address</h1>
</div>

<%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <%= render 'parts/error_message', model: f.object %>
  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'郵便番号（ハイフン無し）　　　　　　　　' %>
    <%= f.text_field :postal_code, class:"form-control" %>
  </div>

  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'住所　　　　　　　　　　　　　　　　　　' %>
    <%= f.text_field :address, class:"form-control", size: 65 %>
  </div>

  <div class="form-inline col-form-label-sm ml-5">
    <%= f.label :'宛名　　　　　　　　　　　　　　　　　　' %>
    <%= f.text_field :name, class:"form-control" %>
    <%= f.submit "Create", class:"btn btn-success ml-5 btn-sm w-25" %>
  </div>
<% end %>

<div class="page_title">
  <h1>Addresses</h1>
</div>
<% @addresses.each do |address| %>
  <table class="table">
    <tr>
      <td>〒
        <%= (address.postal_code).to_s.insert(3, "-") %><br>
        <%= address.address %><br>
        <%= address.name %>
      </td>
      <td></td>
      <td><%= link_to 'Delete', address_path(address), method: :delete, class:"btn btn-danger" %></td>
    </tr>
  </table>
<% end %>