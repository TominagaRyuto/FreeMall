<div class="page_title">
  <h1>Edit Shop</h1>
</div>

<div class="container m-5">
  <%= form_with model: @shop, url: shop_path(@shop), local: true do |f| %>
    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'ショップ画像（任意）　　　　　' %>
      <%= f.attachment_field :image, class:"form-inline" %>
      <small>※220X220px推奨</small>
    </div>

    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'ショップ名　　　　　　　　　　' %>
      <%= f.text_field :name, class:"form-control", placeholder:'フリーモール', autofocus: true %>
    </div>

    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'ショップ説名　　　　　　　　　' %>
      <%= f.text_area :introduction, class:"form-control", placeholder:'フリーモールです', size: "60x4" %>
    </div>

    <div class="form-inline col-form-label-sm m-4 ">
      <%= f.label :'ショップジャンル　　　　　　　' %>
      <%= f.collection_select(:shop_genre_id, @shop_genres, :id, :name, prompt: "選択して下さい", class: 'form-control') %>
    </div>

    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'都道府県　　　　　　　　　　　' %>
      <%= f.select :prefectures, Shop.prefectures.keys.to_a, prompt: '選択してください' %>
    </div>

    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'住所　　　　　　　　　　　　　' %>
      <%= f.text_field :address, class:"form-control", placeholder:'市区町村　建物名等', size: 65 %>
    </div>

    <div class="form-inline col-form-label-sm m-4">
      <%= f.label :'ホームページリンク　　　　　　' %>
      <%= f.text_field :official_hp, class:"form-control", placeholder:'https://github.com/TominagaRyuto/FreeMall', size: 65 %>
    </div>

    <div class="text-center ml-4 w-75">
      <%= f.submit "　Update　", class:"btn btn-success w-25 btn-sm ml-5" %>
    </div>
  <% end %>
</div>

