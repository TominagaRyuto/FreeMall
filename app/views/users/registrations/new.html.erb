<div class="page_title">
  <h1>Sign Up</h1>
  <small class="mt-auto ml-2"><%= render "users/shared/links" %></small>
</div>

<div class="container m-5">
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render 'parts/user/error_message', model: f.object %>
    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'ユーザー画像（任意）　　　　　' %>
      <%= f.attachment_field :image, class:"form-control-file", class:"form-inline" %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'名前　　　　　　　　　　　　　' %>
      <%= f.text_field :name, class:"form-control", placeholder:'山田太郎', autofocus: true %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'フリガナ　　　　　　　　　　　' %>
      <%= f.text_field :name_kana, class:"form-control", placeholder:'ヤマダタロウ' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'メールアドレス　　　　　　　　' %>
      <%= f.text_field :email, autocomplete: "email", class:"form-control", placeholder:'sample@sample.com' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'郵便番号　（ハイフン無し）　　' %>
      <%= f.text_field :postal_code, class:"form-control", placeholder:'0000000(半角)' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'住所　　　　　　　　　　　　　' %>
      <%= f.text_field :address, class:"form-control", size: 65, placeholder:'東京都世田谷区0-0-0　東京マンション202' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'携帯番号　（ハイフン無し）　　' %>
      <%= f.text_field :telephone_number, class:"form-control", placeholder:'08000000000(半角)' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'ニックネーム　　　　　　　　　' %>
      <%= f.text_field :nickname, class:"form-control", placeholder:'タローちゃん' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'パスワード　（６文字以上）　　' %>
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:'123456' %>
    </div>

    <div class="form-inline col-form-label-sm ml-5">
      <%= f.label :'パスワード（確認用）　　　　　' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:'123456' %>
    </div>

    <div class="form-group">
      <span>　　　　　　　　　　　　　　　　</span>
      <%= f.submit "　Sign up　", class:"btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>